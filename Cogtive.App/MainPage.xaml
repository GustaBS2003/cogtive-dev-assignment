<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cogtive.App.MainPage"
             Title="Factory Floor Dashboard">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="0">

            <!-- Header -->
            <Frame BackgroundColor="#0056B3" Padding="24" CornerRadius="10" Margin="0,0,0,20" HasShadow="False">
                <VerticalStackLayout>
                    <Label Text="Cogtive Industrial IoT"
                           HorizontalTextAlignment="Center"
                           TextColor="White"
                           FontSize="26"
                           FontAttributes="Bold"/>
                    <Label Text="Factory Floor Operations"
                           HorizontalTextAlignment="Center"
                           TextColor="White"
                           FontSize="16"
                           Margin="0,10,0,0"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Machine Selection -->
            <Label Text="Select Machine"
                   FontSize="18"
                   FontAttributes="Bold"
                   Margin="0,0,0,10"/>
            <Picker x:Name="MachinePicker"
                    Title="Select a machine"
                    SelectedIndexChanged="OnMachineSelected"
                    Margin="0,0,0,20"/>

            <!-- Machine Status -->
            <Frame IsVisible="False"
                   x:Name="MachineStatusFrame"
                   BackgroundColor="#F9F9F9"
                   Padding="15"
                   CornerRadius="5"
                   Margin="0,0,0,20"
                   HasShadow="False">
                <VerticalStackLayout>
                    <Label Text="Machine Status"
                           FontSize="16"
                           FontAttributes="Bold"
                           Margin="0,0,0,10"/>
                    <Grid ColumnDefinitions="Auto,*"
                          RowDefinitions="Auto,Auto,Auto,Auto">
                        <Label Text="Name:" Grid.Row="0" Grid.Column="0" FontAttributes="Bold"/>
                        <Label x:Name="MachineName" Grid.Row="0" Grid.Column="1"/>

                        <Label Text="Serial:" Grid.Row="1" Grid.Column="0" FontAttributes="Bold"/>
                        <Label x:Name="MachineSerial" Grid.Row="1" Grid.Column="1"/>

                        <Label Text="Type:" Grid.Row="2" Grid.Column="0" FontAttributes="Bold"/>
                        <Label x:Name="MachineType" Grid.Row="2" Grid.Column="1"/>

                        <Label Text="Status:" Grid.Row="3" Grid.Column="0" FontAttributes="Bold"/>
                        <Label x:Name="MachineStatus" Grid.Row="3" Grid.Column="1"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Data Entry Section -->
            <Frame IsVisible="False"
                   x:Name="DataEntryFrame"
                   BackgroundColor="#F0F7FF"
                   Padding="15"
                   CornerRadius="5"
                   Margin="0,0,0,20"
                   HasShadow="False">
                <VerticalStackLayout>
                    <Label Text="Production Data Entry"
                           FontSize="16"
                           FontAttributes="Bold"
                           Margin="0,0,0,10"/>

                    <Label Text="Efficiency (%)" Margin="0,5,0,0"/>
                    <Entry x:Name="EfficiencyEntry"
                           Keyboard="Numeric"
                           Placeholder="Enter efficiency percentage"
                           Margin="0,0,0,10"/>

                    <Label Text="Units Produced" Margin="0,5,0,0"/>
                    <Entry x:Name="UnitsProducedEntry"
                           Keyboard="Numeric"
                           Placeholder="Enter units produced"
                           Margin="0,0,0,10"/>

                    <Label Text="Downtime (minutes)" Margin="0,5,0,0"/>
                    <Entry x:Name="DowntimeEntry"
                           Keyboard="Numeric"
                           Placeholder="Enter downtime in minutes"
                           Margin="0,0,0,10"/>

                    <Button x:Name="SubmitButton"
                            Text="Submit Production Data"
                            BackgroundColor="#0056B3"
                            TextColor="White"
                            Clicked="OnSubmitClicked"
                            Margin="0,10,0,0"
                            CornerRadius="5"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Production Data List -->
            <Frame x:Name="ProductionDataListFrame"
                   IsVisible="True"
                   BackgroundColor="#F4F4F4"
                   Padding="10"
                   CornerRadius="5"
                   Margin="0,0,0,20"
                   HasShadow="False">
                <VerticalStackLayout>
                    <Label Text="Production Data"
                           FontSize="16"
                           FontAttributes="Bold"
                           Margin="0,0,0,10"/>
                    <CollectionView x:Name="ProductionDataList"
                                    ItemsLayout="VerticalList"
                                    Margin="0">
                        <CollectionView.Header>
                            <Grid ColumnDefinitions="*,*,*,*" Padding="0,0,0,5">
                                <Label Text="Timestamp" FontAttributes="Bold"/>
                                <Label Text="Efficiency" FontAttributes="Bold" Grid.Column="1"/>
                                <Label Text="Units" FontAttributes="Bold" Grid.Column="2"/>
                                <Label Text="Downtime" FontAttributes="Bold" Grid.Column="3"/>
                            </Grid>
                        </CollectionView.Header>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid ColumnDefinitions="*,*,*,*" Padding="0,2">
                                    <Label Text="{Binding Timestamp, StringFormat='{0:yyyy-MM-dd HH:mm}'}"/>
                                    <Label Text="{Binding Efficiency}" Grid.Column="1"/>
                                    <Label Text="{Binding UnitsProduced}" Grid.Column="2"/>
                                    <Label Text="{Binding Downtime}" Grid.Column="3"/>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

            <!-- QR Code Scanner Button -->
            <Button Text="Scan Equipment QR Code"
                    BackgroundColor="#34495E"
                    TextColor="White"
                    Clicked="OnScanQRClicked"
                    CornerRadius="5"
                    Margin="0,0,0,20"/>

            <!-- Offline Sync Status -->
            <Frame BackgroundColor="#FFF9E6"
                   Padding="15"
                   CornerRadius="5"
                   HasShadow="False">
                <VerticalStackLayout>
                    <Label Text="Offline Sync Status"
                           FontSize="16"
                           FontAttributes="Bold"
                           Margin="0,0,0,10"/>
                    <HorizontalStackLayout>
                        <Label Text="Pending uploads:"
                               VerticalOptions="Center"
                               FontAttributes="Bold"/>
                        <Label x:Name="PendingUploadsLabel"
                               Text="0"
                               VerticalOptions="Center"
                               Margin="5,0,0,0"/>
                    </HorizontalStackLayout>
                    <Button x:Name="SyncButton"
                            Text="Sync Now"
                            IsEnabled="False"
                            BackgroundColor="#FF9800"
                            TextColor="White"
                            Clicked="OnSyncClicked"
                            CornerRadius="5"
                            Margin="0,10,0,0"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Loading Indicator and Error Messages -->
            <ActivityIndicator x:Name="LoadingIndicator"
                               IsRunning="False"
                               IsVisible="False"
                               Margin="0,20,0,0"/>
            <Label x:Name="ErrorMessage"
                   TextColor="#CC0000"
                   IsVisible="False"
                   Margin="0,10,0,0"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
